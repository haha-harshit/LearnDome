
<link rel="stylesheet" href="/css/dashboard.css">

<div id="content-2">
    <a href="/">Back</a>

    <h1>Your Courses</h1>
    
    <br>
    <br>
    <br>

    <% for(course of uc.courses){ %>
       <ul>

            
            <li>
                <a href="/course/inst-course-modal/<%= course._id %>"><%= course.c_name %></a>
                
                <% if(locals.user && locals.user.id == course.instructor){ %>
                    <small>
                        <a href="/course/delete-course/<%= course._id %>">Delete Course</a>
                    </small>
                <% } %>
                <br>
                <br>
            </li>
       </ul> 
    <% } %>


    <br>
    <br>
    

</div>



